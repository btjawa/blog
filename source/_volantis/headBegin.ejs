<!-- Custom Style -->
<style>
body {
    background-image: url(/img/background-light.png);
}

@media (prefers-color-scheme: dark) {
    :root:not([color-scheme]) body {
        background-image: url(/img/background-dark.png);
    }
}

@keyframes rightmenu-in {
    0% {
        opacity: 0;
        transform: translateY(-50px);
    }
    100% {
        opacity: 1;
        filter: none;
        transform: translateY(0);
    }
}

#rightmenu-wrapper {
    transition: all .1s ease;
}

div.top p.title svg {
    height: 50px;
    filter: drop-shadow(0px 0px 4px rgba(245,188,197,0.8));
    color: var(--color-site-inner);
    overflow: visible;
}
</style>

<script>
fetch('/img/logo.svg').then(async resp => {
    const title = document.querySelector("div.top p.title");
    title.innerHTML = await resp.text();
})
</script>