<style>
body {
  background-image: url(/img/email-pattern-light.png)
}

td {
  white-space: nowrap;
}

.headerlink {
  user-select: none;
  margin-left: 8px;
  opacity: 0.25;
}

.headerlink:hover {
  color: #9B9C9D !important;
  text-decoration: underline;
  opacity: 1;
}

@keyframes rightmenu-in {
  0% {
    opacity: 0;
    transform: translateY(-50px);
  }
  100% {
    opacity: 1;
    filter: none;
    transform: translateY(0);
  }
}

#rightmenu-wrapper {
  transition: all .1s ease;
}

@media (prefers-color-scheme: dark) {
  :root:not([color-scheme]) body {
    background-image: url(/img/email-pattern-dark.png);
  }
}

[color-scheme=dark] body {
  background-image: url(/img/email-pattern-dark.png);
}
</style>
<script>
fetch("/img/home-icon.svg").then(async resp => {
  const title = document.querySelector("div.top p.title");
  title.innerHTML = await resp.text();
  title.querySelectorAll('.letter').forEach(path => {
    path.style.setProperty('--len', `${path.getTotalLength()}px`);
  });
})
</script>